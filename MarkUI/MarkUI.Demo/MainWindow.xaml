        xmlns:local="clr-namespace:MarkUI.Demo"
        xmlns:attach="clr-namespace:MarkUI.Attach;assembly=MarkUI"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <StackPanel>
            <RadioButton Content="聚光灯效果" Tag="LampControl"/>
